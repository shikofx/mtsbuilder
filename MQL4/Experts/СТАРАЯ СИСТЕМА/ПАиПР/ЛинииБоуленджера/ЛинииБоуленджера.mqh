class ЛинииБоуленджера : Сигнал
  {
private:
   int               период; //период
   double            отклонение;        // кол-во стандартных отклонений
   int               расстояние;      // сдвиг относительно цены
   int               типЦены;    // тип цены
   int               номерЛинии;             // индекс линии
   int               смещение;             // сдвиг

public:
   double            ОпределитьУровень();
                     ЛинииБоуленджера();
                     ЛинииБоуленджера(ENUM_НАПРАВЛЕНИЕ_СИГНАЛА _направление,ENUM_TIMEFRAMES _таймфрейм,int _период,double _отклонение,int _расстояние,int _смещение);
                    ~ЛинииБоуленджера();
  };
