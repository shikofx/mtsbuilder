ЛинииБоуленджера::~ЛинииБоуленджера()
  {

  }
//+------------------------------------------------------------------+
//|                                                                  |
//+------------------------------------------------------------------+
ЛинииБоуленджера::ЛинииБоуленджера(ENUM_НАПРАВЛЕНИЕ_СИГНАЛА _направление,ENUM_TIMEFRAMES _таймфрейм,int _период,double _отклонение,int _расстояние,int _смещение)
  {
   направление=_направление;
   таймфрейм=_таймфрейм;
   период=_период;
   отклонение=_отклонение;
   расстояние=_расстояние;
   смещение=_смещение;
  }
//+------------------------------------------------------------------+
double ЛинииБоуленджера::ОпределитьУровень()
  {
   if(направление==вверх)
      уровень=iBands(Symbol(),таймфрейм,период,отклонение,0,PRICE_LOW,MODE_LOWER,смещение);
   if(направление==вниз)
      уровень=iBands(Symbol(),таймфрейм,период,отклонение,0,PRICE_HIGH,MODE_UPPER,смещение);
   return уровень;
  }
